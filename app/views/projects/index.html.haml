%h1 Listing projects

%table.table.table-hover
  %tr
    %th Name
    %th Url
    %th Creater
    %th
    %th
    %th

  - @projects.each do |project|
    %tr
      %td= link_to project.name, project.url, :target => "_blank"
      %td= link_to project.url, project.url, :target => "_blank"
      %td= project.creater
      %td= link_to 'Show', project
      - if can? :modify, project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }

%br

- if can? :modify, @project
  = link_to 'New Project', new_project_path
