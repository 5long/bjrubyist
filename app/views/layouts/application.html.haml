%html.no-js{:lang => "en"}
  / <![endif]
  %html
    %head
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %title= content_for?(:title) ? yield(:title) : "北京Rubyist"
        %meta{:content => content_for?(:description) ? yield(:description) : "Bjrubyist", :name => "description"}
          = stylesheet_link_tag "application", :media => "all"
          = javascript_include_tag "application"
          = csrf_meta_tags
          = yield(:head)
    %body
      %header.navbar.navbar-fixed-top
        %nav.navbar-inner
          .container-fluid
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = render 'layouts/navigation'
      #main{:role => "main"}
        .container
          .content
            .row
              .span12
                = render 'layouts/messages'
                = yield
            %footer
        / ! end of .container
      / ! end of #main